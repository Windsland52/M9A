{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "custom_recognition": {
            "enum": [
                "MultiRecognition",
                "Count",
                "ColorOCR",
                "ColorOCRWithFallback",
                "CheckStopping",
                "CandyPageRecord",
                "BankShop",
                "ActivityRe_releaseChapter",
                "SailingRecordSelectTarget",
                "SailingRecordBoatRecord",
                "FindFirstUnplayedStageByCheckmark",
                "CCBuyCard",
                "CCRemainMoney",
                "StagePromotionComplete",
                "SOSSelectNode",
                "SOSSelectEncounterOptionList",
                "SOSSelectEncounterOptionFindSelected"
            ]
        }
    },
    "anyOf": [
        {
            "$ref": "#/$defs/MultiRecognition"
        },
        {
            "$ref": "#/$defs/Count"
        },
        {
            "$ref": "#/$defs/ColorOCR"
        },
        {
            "$ref": "#/$defs/ColorOCRWithFallback"
        },
        {
            "$ref": "#/$defs/CheckStopping"
        },
        {
            "$ref": "#/$defs/CandyPageRecord"
        },
        {
            "$ref": "#/$defs/BankShop"
        },
        {
            "$ref": "#/$defs/ActivityRe_releaseChapter"
        },
        {
            "$ref": "#/$defs/SailingRecordSelectTarget"
        },
        {
            "$ref": "#/$defs/SailingRecordBoatRecord"
        },
        {
            "$ref": "#/$defs/FindFirstUnplayedStageByCheckmark"
        },
        {
            "$ref": "#/$defs/CCBuyCard"
        },
        {
            "$ref": "#/$defs/CCRemainMoney"
        },
        {
            "$ref": "#/$defs/StagePromotionComplete"
        },
        {
            "$ref": "#/$defs/SOSSelectNode"
        },
        {
            "$ref": "#/$defs/SOSSelectEncounterOptionList"
        },
        {
            "$ref": "#/$defs/SOSSelectEncounterOptionFindSelected"
        }
    ],
    "$defs": {
        "RequiredParam": {
            "anyOf": [
                {
                    "required": [
                        "custom_recognition_param"
                    ]
                },
                {
                    "required": [
                        "custom_recognition_param_code"
                    ]
                }
            ]
        },
        "MultiRecognition": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "MultiRecognition"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "nodes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "节点名称数组，按顺序对应 $0、$1、$2..."
                        },
                        "logic": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "AND",
                                        "OR",
                                        "CUSTOM"
                                    ],
                                    "default": "AND",
                                    "description": "逻辑类型：AND(所有节点都识别成功)、OR(任意节点识别成功)、NOT(节点识别结果取反)、CUSTOM(使用自定义表达式)"
                                },
                                "expression": {
                                    "type": "string",
                                    "description": "自定义逻辑表达式，仅当type=CUSTOM时使用。支持$0、$1、$2引用nodes数组节点，{NodeName}引用其他节点，AND、OR、NOT运算符和括号分组"
                                }
                            },
                            "required": [
                                "type"
                            ],
                            "additionalProperties": false,
                            "description": "逻辑判断条件"
                        },
                        "return": {
                            "oneOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    },
                                    "minItems": 4,
                                    "maxItems": 4,
                                    "description": "固定坐标 [x, y, w, h]"
                                },
                                {
                                    "type": "string",
                                    "description": "基于识别结果计算ROI表达式。支持$0、$1、$2引用节点区域，{NodeName}引用其他节点区域，UNION、INTERSECTION、OFFSET等函数"
                                }
                            ],
                            "description": "返回的ROI区域"
                        }
                    },
                    "required": [
                        "nodes",
                        "return"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "Count": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "Count"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "target": {
                            "type": "integer",
                            "minimum": 1,
                            "description": "目标匹配次数，默认sys.maxsize"
                        },
                        "recognition": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "default": "DirectHit",
                                    "description": "识别类型，默认DirectHit"
                                },
                                "param": {
                                    "type": "object",
                                    "description": "识别相关字段"
                                }
                            },
                            "additionalProperties": false,
                            "description": "v2协议的recognition字段"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        "ColorOCR": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "ColorOCR"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "target_color": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 255
                            },
                            "minItems": 3,
                            "maxItems": 3,
                            "default": [
                                255,
                                255,
                                255
                            ],
                            "description": "目标颜色RGB值，默认 [255, 255, 255] (白色)"
                        },
                        "tolerance": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 255,
                            "default": 55,
                            "description": "颜色容差，默认55"
                        },
                        "recognition": {
                            "type": "string",
                            "description": "要运行的OCR识别节点名称"
                        }
                    },
                    "required": [
                        "recognition"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "ColorOCRWithFallback": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "ColorOCRWithFallback"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "target_color": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 255
                            },
                            "minItems": 3,
                            "maxItems": 3,
                            "default": [
                                255,
                                255,
                                255
                            ],
                            "description": "目标颜色RGB值，默认 [255, 255, 255] (白色)"
                        },
                        "tolerance": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 255,
                            "default": 55,
                            "description": "颜色容差，默认55"
                        },
                        "recognition": {
                            "type": "string",
                            "description": "要运行的OCR识别节点名称"
                        }
                    },
                    "required": [
                        "recognition"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "CheckStopping": {
            "properties": {
                "custom_recognition": {
                    "const": "CheckStopping",
                    "description": "检查任务是否即将停止"
                }
            }
        },
        "CandyPageRecord": {
            "properties": {
                "custom_recognition": {
                    "const": "CandyPageRecord",
                    "description": "记录糖果页面状态"
                }
            }
        },
        "BankShop": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "BankShop",
                    "description": "在8个商品内容中寻找结果"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "expected": {
                            "type": "string",
                            "description": "商品名称"
                        },
                        "inverse": {
                            "type": "boolean",
                            "default": false,
                            "description": "是否反转，默认 false"
                        }
                    },
                    "required": [
                        "expected"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "ActivityRe_releaseChapter": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "ActivityRe_releaseChapter",
                    "description": "识别复刻活动对应别名"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "Re_release_name": {
                            "type": "string",
                            "description": "复刻活动别名"
                        }
                    },
                    "required": [
                        "Re_release_name"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "SailingRecordSelectTarget": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "SailingRecordSelectTarget",
                    "description": "识别航海记录界面中的目标关卡"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "level": {
                            "type": "integer",
                            "enum": [
                                0,
                                1
                            ],
                            "description": "0: 普通, 1: 困难"
                        }
                    },
                    "required": [
                        "level"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "SailingRecordBoatRecord": {
            "properties": {
                "custom_recognition": {
                    "const": "SailingRecordBoatRecord",
                    "description": "识别选择船队界面中骰子的点数"
                }
            }
        },
        "FindFirstUnplayedStageByCheckmark": {
            "allOf": [
                {
                    "$ref": "#/$defs/RequiredParam"
                }
            ],
            "properties": {
                "custom_recognition": {
                    "const": "FindFirstUnplayedStageByCheckmark",
                    "description": "遍历定义的关卡列表，查找第一个未通关的关卡"
                },
                "custom_recognition_param": {
                    "type": "object",
                    "properties": {
                        "difficulty": {
                            "type": "string",
                            "enum": [
                                "Easy",
                                "Normal",
                                "Hard"
                            ],
                            "description": "难度选择"
                        },
                        "mode": {
                            "type": "string",
                            "enum": [
                                "Normal",
                                "Quickly"
                            ],
                            "description": "模式选择"
                        }
                    },
                    "required": [
                        "difficulty",
                        "mode"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "CCBuyCard": {
            "properties": {
                "custom_recognition": {
                    "const": "CCBuyCard",
                    "description": "翻斗棋：识别可购买卡牌"
                }
            }
        },
        "CCRemainMoney": {
            "properties": {
                "custom_recognition": {
                    "const": "CCRemainMoney",
                    "description": "翻斗棋：识别剩余缪斯币"
                }
            }
        },
        "StagePromotionComplete": {
            "properties": {
                "custom_recognition": {
                    "const": "StagePromotionComplete",
                    "description": "推图模式完成判断（当前关为满星且无下一关）"
                }
            }
        },
        "SOSSelectNode": {
            "properties": {
                "custom_recognition": {
                    "const": "SOSSelectNode",
                    "description": "局外演绎：无声综合征-节点选择"
                }
            }
        },
        "SOSSelectEncounterOptionList": {
            "properties": {
                "custom_recognition": {
                    "const": "SOSSelectEncounterOptionList",
                    "description": "局外演绎：无声综合征-途中偶遇选项内容识别"
                }
            }
        },
        "SOSSelectEncounterOptionFindSelected": {
            "properties": {
                "custom_recognition": {
                    "const": "SOSSelectEncounterOptionFindSelected",
                    "description": "局外演绎：无声综合征-途中偶遇选项识别已选中的选项"
                }
            }
        }
    }
}